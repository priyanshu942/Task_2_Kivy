#:kivy 2.0.0
MDScreen: 
    name:"info"
    MDFloatLayout:
        md_bg_color :0/255,0,0/255,1
        MDLabel:
            text:"Please tell us your name"
            pos_hint:{"center_x":.7,"center_y":.6}
            font_size:"18sp"
            font_name:"Roboto-Regular.ttf"
            color:1,1,1,1
        TextInput:
            id:name
            pos_hint:{"center_x":.49,"center_y":.5}
            cursor_color:0,0,0,1
            background_color:1,1,1,1
            size_hint_y:.05
            size_hint_x:.7
            hint_text:"Name"
        TextInput:
            pos_hint:{"center_x":.49,"center_y":.4}
            cursor_color:0,0,0,1
            background_color:1,1,1,1
            size_hint_y:.05
            size_hint_x:.7
            hint_text:" Last Name"
        MDRectangleFlatButton:
            text:"Continue"
            color:1,1,1,1
            on_press:app.set_text()
            on_release:app.root.current="busisetup"
            pos_hint:{"center_x":.5,"center_y":.3}