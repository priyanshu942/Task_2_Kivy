#:kivy 2.0.0
MDScreen: 
    name:"contact"
    MDFloatLayout:
        md_bg_color :0/255,0,0/255,1
        MDLabel:
            text:"Ask Verma Tech"
            font_size:"30sp"
            pos_hint:{"center_x":0.6,"center_y":0.9}
            color:1,1,1,1
        MDLabel:
            text:"For any queries relating tech,"
            font_size:"20sp"
            pos_hint:{"center_x":0.6,"center_y":0.8}
            color:1,1,1,1
        MDLabel:
            text:"tax and legal issues"
            font_size:"20sp"
            pos_hint:{"center_x":0.6,"center_y":0.75}
            color:1,1,1,1
        MDLabel:
            text:"Contact Us ->"
            font_size:"20sp"
            pos_hint:{"center_x":0.6,"center_y":0.7}
            color:1,1,1,1
        TextInput:
            id:name
            pos_hint:{"center_x":.49,"center_y":.5}
            cursor_color:0,0,0,1
            background_color:1,1,1,1
            size_hint_y:.3
            size_hint_x:.8
            hint_text:"Please describe your queries in 2-3 lines"
        MDRectangleFlatButton:
            text:"Submit"
            color:1,1,1,1
            pos_hint:{"center_x":.5,"center_y":.25}
            on_release:app.root.current="confirm"
        MDFlatButton:
            text:"Visit VermaTech.com"
            md_bg_color: 0, 0, 1, 1
            color:1,1,1,1
            pos_hint:{"center_x":.5,"center_y":.1}
            
        