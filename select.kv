#:kivy 2.0.0
MDScreen: 
    name:"select"
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Setting background color to black
            Rectangle:
                pos: self.pos
                size: self.size
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "Please select the "
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .85}
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "companies you want "
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .8}
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "ICICI"
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .6}
             
        MDCheckbox:
            pos_hint: {"center_x": .7, "center_y": .6}
            size_hint: None, None 
            size: '48dp', '48dp'
            color: 1, 1, 1, 1  # White color when checked
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "KOTAK"
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .5}
        MDCheckbox:
            pos_hint: {"center_x": .7, "center_y": .5}
            size_hint: None, None 
            size: '48dp', '48dp'
            color: 1, 1, 1, 1  # White color for checkbox
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "HDFC"
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .4}
        MDCheckbox:
            pos_hint: {"center_x": .7, "center_y": .4}
            size_hint: None, None 
            size: '48dp', '48dp'
            color: 1, 1, 1, 1  # White color for checkbox
        MDLabel:
            color: 1, 1, 1, 1  # White color for label
            text: "AXIS"
            font_size: "19sp"
            pos_hint: {"center_x": .6, "center_y": .3}
        MDCheckbox:
            pos_hint: {"center_x": .7, "center_y": .3}
            size_hint: None, None 
            size: '48dp', '48dp'
            color: 1, 1, 1, 1  # White color for checkbox
        MDRectangleFlatButton:
            text:"Continue"
            color:1,1,1,1
            pos_hint:{"center_x":.5,"center_y":.15}
